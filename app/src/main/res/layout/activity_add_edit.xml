<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activities"
    tools:context=".AddEditActivity">
<LinearLayout
    android:padding="@dimen/t_tittle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nic: "
        android:textSize="25dp"
        android:layout_marginVertical="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/t_tittle"
        android:autofillHints="@string/app_name"
        android:background="@drawable/bg_edittext"
        android:gravity="center"
        android:hint="@string/nic"
        android:inputType="number"
        android:id="@+id/clientNic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OS: "
        android:textSize="25dp"
        android:layout_marginVertical="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/t_tittle"
        android:autofillHints="@string/app_name"
        android:background="@drawable/bg_edittext"
        android:gravity="center"
        android:hint="@string/os"
        android:inputType="number"
        android:id="@+id/clientOS"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_bombilla"
        android:id="@+id/gallery"
        />
</LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:onClick="add_photo_video"
        app:srcCompat="@drawable/ic_photo_camera_black_24dp"
        tools:ignore="VectorDrawableCompat" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>