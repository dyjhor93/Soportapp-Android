<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingVertical="@dimen/dpmin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_os_item"
        android:padding="@dimen/dp1"
        android:gravity="center"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp1">
            <ImageView
                android:layout_width="@dimen/imglittle"
                android:layout_height="@dimen/imglittle"
                android:src="@drawable/ic_photo_camera_black_24dp"/>
            <TextView
                android:text="@string/nic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginVertical="5dp"
                android:textSize="25dp"
                android:textColor="@color/primaryTextColor"
                android:id="@+id/clientNic"
                android:paddingHorizontal="@dimen/dp1"/>
            <TextView
                android:text="@string/os"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:textSize="25dp"
                android:textColor="@color/primaryTextColor"
                android:id="@+id/clientOS"
                android:paddingHorizontal="@dimen/dp1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>