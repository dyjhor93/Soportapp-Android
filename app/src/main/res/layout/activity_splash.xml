<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash"
    android:gravity="center"
    android:onClick="startLogin"
    android:orientation="vertical"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:src="@drawable/ic_bombilla" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/t_tittle"
        android:shadowColor="@android:color/black"
        android:shadowDx="2.0"
        android:shadowDy="2.0"
        android:shadowRadius="5.0"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/t_tittle"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/img"
        android:layout_height="@dimen/img"
        android:src="@drawable/ic_camara" />
</LinearLayout>