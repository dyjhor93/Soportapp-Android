<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- "background shadow" -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#000000" />

            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />


            <corners android:radius="0dp" />
        </shape>
    </item>


    <!-- over bottom shadow -->
    <item>
        <shape android:shape="rectangle"
            >

            <gradient
                android:angle="-90"
                android:startColor="#FFFFFF"
                android:centerColor="#27ABFFEB"
                android:endColor="#A43BFFE2"
                android:centerY="0.9"


                android:type="linear" />

            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>
